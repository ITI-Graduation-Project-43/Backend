@page "/ResetPassword"
@model MindMission.API.Pages.ResetPasswordModel
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.RazorPages
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" defer></script>
    <title>Reset Password</title>
</head>
<body>
    <div class="container">
        <div class="w-50 m-auto mt-5">
            <form method="post" action="/api/user/ResetPassword">
                <input type="email" name="Email" value="@Request.Query["Email"]" hidden />
                <input type="text" name="Token" value="@Request.Query["Token"]" hidden />
                <div class="mb-3">
                    <input type="password" name="Password" class="form-control" placeholder="New Password">
                </div>
                <div class="mb-3">
                    <input type="password" name="ConfirmedPassword" class="form-control" placeholder="Confirm Password">
                </div>
                <div class="mb">
                    <input type="submit" class="btn btn-primary w-100" value="Reset">
                </div>
            </form>
        </div>
    </div>
</body>
</html>